@{
    ViewBag.Title = "Guest";
}


<div class="col-sm-8 my-item divcolor">

    @using (Html.BeginForm("Guest", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label for="exampleFormControlInput1">Name</label>
            <input type="text" name="name" class="form-control" id="exampleFormControlInput1" placeholder="Введите ваше имя">
        </div>


        <div class="form-group">
            <label for="exampleFormControlTextarea1">Ваш Комментарий</label>
            <textarea class="form-control" name="comm" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <input type="submit" name="Send" value="Отправить" />
    }

</div>

<div class="col-2 my-item divcolor">
    <textarea readonly style="height: 300px; width:150px;"> @ViewBag.Guest </textarea>
</div>